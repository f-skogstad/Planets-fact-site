---
import Navbar from '../components/Navbar.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/png' href='/favicon.png' />
    <meta name='generator' content={Astro.generator} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Antonio:wght@500&family=League+Spartan&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
  </head>
  <body class='background'>
    <Navbar />
    <slot />
  </body>
</html>

<style>
  .background {
    background: url('/background-stars.svg') no-repeat center center fixed;
    background-size: cover;
    background-color: #070724;
    height: 100vh;
  }
</style>

<style is:global>
  * {
    font-family: theme(fontFamily.body);
  }

  h1 {
    font-size: theme('fontSize.h1');
    line-height: theme('lineHeight.h1');
    color: theme('colors.white');
    font-family: theme(fontFamily.heading);
    font-weight: 700;
  }
  h2 {
    font-size: theme('fontSize.h2');
    line-height: theme('lineHeight.h2');
    letter-spacing: theme('letterSpacing.h2');
    color: theme('colors.white');
    font-family: theme(fontFamily.heading);
    font-weight: 700;
  }
  h3,
  a {
    font-size: theme('fontSize.h3');
    line-height: theme('lineHeight.h3');
    letter-spacing: theme('letterSpacing.h3');
    color: theme('colors.white');
    font-family: theme(fontFamily.heading);
    font-weight: 700;
  }
  h4 {
    font-size: theme('fontSize.h4');
    line-height: theme('lineHeight.h4');
    letter-spacing: theme('letterSpacing.h4');
    color: theme('colors.white');
    font-family: theme(fontFamily.heading);
    font-weight: 700;
  }
  p {
    font-size: theme('fontSize.body');
    line-height: theme('lineHeight.body');
    color: theme('colors.white');
  }
</style>
