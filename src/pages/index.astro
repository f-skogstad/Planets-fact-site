---
import Layout from '../layouts/Layout.astro';
import data from '@data/data.json';
import IPlanet from '@interfaces/IPlanet';

import FactsCard from '@components/FactsCard';
import FactsRow from '@components/FactsRow';

const mercury: IPlanet = data.find((x) => x.name === 'Mercury');
---

<Layout title='Mercury'>
  <main class='container mx-auto grid gap-4 px-4 md:h-3/4'>
    <FactsCard
      client:load
      name={mercury.name}
      overview={mercury.overview}
      structure={mercury.structure}
      geology={mercury.geology}
      images={mercury.images}
    />
    <FactsRow
      rotation={mercury.rotation}
      revolution={mercury.revolution}
      radius={mercury.radius}
      temperature={mercury.temperature}
    />
  </main>
</Layout>
